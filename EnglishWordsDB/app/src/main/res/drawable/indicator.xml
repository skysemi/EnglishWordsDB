<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 選択時 -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size android:height="21dp" android:width="22dp"/>
            <solid android:color="@color/indicator_checked"/>
            <stroke android:width="12dp" android:color="@android:color/transparent"/>
        </shape>
    </item>
    <!-- 通常時 -->
    <item>
        <shape android:shape="rectangle" android:thickness="8dp">
            <size android:height="20dp" android:width="20dp"/>
            <solid android:color="@color/indicator_normal"/>
            <stroke android:width="13dp"  android:color="@android:color/transparent"/>
        </shape>
    </item>

</selector>